<Window x:Class="Sonneville.PriceAnalyzer.PortfoliosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Portfolios" Height="300" Width="300">
    <Grid>
        <Button Content="Add Portfolio" Margin="155,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="111" Click="Button_Click" />
        <ListView ItemsSource="{Binding}" Height="199" Margin="12,50,0,0" Name="listBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="254">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Portfolio" DisplayMemberBinding="{Binding Path=CashTicker}" Width="100" />
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding Path=Value}" Width="80" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
